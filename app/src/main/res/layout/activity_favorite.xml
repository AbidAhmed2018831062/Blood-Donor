<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favorite"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="15dp">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:src="@drawable/arrowb" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Favorites Products:"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/Blood"
        android:drawableLeft="@drawable/fav"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:textStyle="bold"></TextView>

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="20dp"
        android:layout_height="wrap_content"
        android:numColumns="2"></GridView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sh"
        android:orientation="vertical"
        android:visibility="gone">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have not added any products in your favorite list. Please add some product!!"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/Blood"
        android:id="@+id/no"
        android:textSize="16sp"
        android:textStyle="bold"></TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/Show"
            android:textSize="16sp"
            android:textColor="#fff"
            android:background="@drawable/button"
            android:text="Buy Products"
            android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</LinearLayout>