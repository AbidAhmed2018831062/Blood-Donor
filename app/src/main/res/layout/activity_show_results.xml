<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowResults"
    android:padding="15dp"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:src="@drawable/arrowb" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laughter is the best medicine. Spread Love and Happiness."
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text"
            android:textColor="@color/Blood"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:id="@+id/re"
            android:layout_marginBottom="15dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rere"></androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Simmilar Products"
            android:textStyle="bold"
           android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@color/grey"></TextView>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:horizontalSpacing="20dp"
            android:verticalSpacing="20dp"
            android:numColumns="2"></GridView>

    </LinearLayout>

</LinearLayout>